<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_base_6c">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_currencyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计：￥999"
                android:textSize="20sp"
                android:textColor="@color/google_red"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_shopPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_currencyPrice"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="节省：￥999"
                android:textSize="18sp"
                android:textColor="@color/wallet_base_blue"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#f90"
                android:text="购买"
                android:textSize="25sp"
                android:textColor="#fff"
                android:gravity="center"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_cart"/>

    </RelativeLayout>

</FrameLayout>
