<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/ivBoutiqueImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title"
            android:text="aaaaa"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/tv_boutique_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冬季衣橱大换血"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_boutique_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/item_good_text"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:text="哈哈哈哈哈哈哈哈哈哈"/>
    </LinearLayout>

</RelativeLayout>